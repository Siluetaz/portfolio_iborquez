---
import { getLangFromUrl, useTranslations } from "i18n/utils";
const {
    project: {
        links,
        description,
        technologies,
        imgDirection: { desktop, mobile },
        name,
    },
} = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div
    class="w-[18rem] sm:w-[26rem] bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700"
>
    <a href="#">
        <img class="rounded-t-lg" src={desktop} alt="" />
    </a>
    <div class="p-5 w-full">
        <a href="#">
            <h5
                class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
            >
                {name}
            </h5>
        </a>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
            {description}
        </p>
        <div class="flex flex-col gap-5">
            <div class="bg-blue-200 overflow-x-auto flex gap-1 no-scroll">
                {
                    technologies.map((tech: any) => (
                        <span class="inline-block px-3 py-1 mb-2 mr-2 text-sm font-semibold text-gray-700 bg-gray-200 rounded-full dark:bg-gray-700 dark:text-gray-200">
                            {tech}
                        </span>
                    ))
                }
            </div>
            <div class="bg-red-200">
                {
                    Object.entries(links).map(([key, value]) =>
                        value ? (
                            <a
                                href={value as string}
                                target="_blank"
                                class="inline-block px-3 py-1 mb-2 mr-2 text-sm font-semibold text-gray-700 bg-gray-200 rounded-full dark:bg-gray-700 dark:text-gray-200"
                            >
                                {t("projects." + key)}
                            </a>
                        ) : null,
                    )
                }
            </div>
        </div>
    </div>
</div>
